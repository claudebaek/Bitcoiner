# Fastfile for Bitcoiner
# Automates building and uploading to TestFlight

default_platform(:ios)

platform :ios do
  
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Setup API key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"] || "R29522TS2G",
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"] || "69a6de89-d9b3-47e3-e053-5b8c7c11a4d1",
      key_filepath: "fastlane/AuthKey_R29522TS2G.p8",
      in_house: false
    )
    
    # Increment build number using current timestamp
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )
    
    # Create Bundle ID if not exists using App Store Connect API
    begin
      require 'spaceship'
      Spaceship::ConnectAPI.token = Spaceship::ConnectAPI::Token.create(
        key_id: api_key[:key_id],
        issuer_id: api_key[:issuer_id],
        key: api_key[:key]
      )
      
      bundle_id = Spaceship::ConnectAPI::BundleId.find("leejay100.Bitcoiner")
      unless bundle_id
        UI.message("Creating new Bundle ID: leejay100.Bitcoiner")
        Spaceship::ConnectAPI::BundleId.create(
          name: "Bitcoiner",
          identifier: "leejay100.Bitcoiner",
          platform: Spaceship::ConnectAPI::BundleIdPlatform::IOS
        )
        UI.success("Bundle ID created successfully!")
      else
        UI.message("Bundle ID already exists")
      end
    rescue => e
      UI.important("Bundle ID creation note: #{e.message}")
    end
    
    # Get certificates
    get_certificates(
      api_key: api_key
    )
    
    # Get provisioning profile (will create if needed)
    get_provisioning_profile(
      api_key: api_key,
      app_identifier: "leejay100.Bitcoiner",
      readonly: false
    )
    
    # Build the app
    gym(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      output_directory: "./build",
      output_name: "Bitcoiner.ipa",
      export_method: "app-store",
      clean: true
    )
    
    # Create app on App Store Connect if it doesn't exist
    begin
      require 'spaceship'
      Spaceship::ConnectAPI.token = Spaceship::ConnectAPI::Token.create(
        key_id: api_key[:key_id],
        issuer_id: api_key[:issuer_id],
        key: api_key[:key]
      )
      
      app = Spaceship::ConnectAPI::App.find("leejay100.Bitcoiner")
      unless app
        UI.message("Creating new app: Bitcoiner")
        Spaceship::ConnectAPI::App.create(
          name: "Bitcoiner",
          version_string: "1.0.0",
          sku: "leejay100.Bitcoiner",
          primary_locale: "ko",
          bundle_id: "leejay100.Bitcoiner"
        )
        UI.success("App created successfully!")
      else
        UI.message("App already exists on App Store Connect")
      end
    rescue => e
      UI.important("App creation note: #{e.message}")
    end
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key: api_key
    )
  end
  
  desc "Build only (no upload)"
  lane :build do
    build_app(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      output_directory: "./build",
      output_name: "Bitcoiner.ipa",
      export_method: "development"
    )
  end
  
  desc "Run tests"
  lane :test do
    run_tests(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      devices: ["iPhone 16 Pro"]
    )
  end
  
  desc "Create app on App Store Connect"
  lane :create_app do
    api_key = app_store_connect_api_key(
      key_id: "R29522TS2G",
      issuer_id: "69a6de89-d9b3-47e3-e053-5b8c7c11a4d1",
      key_filepath: "fastlane/AuthKey_R29522TS2G.p8",
      in_house: false
    )
    
    produce(
      api_key: api_key,
      app_identifier: "leejay100.Bitcoiner",
      app_name: "Bitcoiner",
      language: "Korean",
      sku: "leejay100Bitcoiner",
      platforms: ["ios"],
      skip_devcenter: true
    )
  end
  
  desc "Upload existing IPA to TestFlight"
  lane :upload do
    api_key = app_store_connect_api_key(
      key_id: "R29522TS2G",
      issuer_id: "69a6de89-d9b3-47e3-e053-5b8c7c11a4d1",
      key_filepath: "fastlane/AuthKey_R29522TS2G.p8",
      in_house: false
    )
    
    upload_to_testflight(
      ipa: "./build/Bitcoiner.ipa",
      skip_waiting_for_build_processing: true,
      api_key: api_key
    )
  end
  
  desc "Upload metadata and screenshots to App Store Connect"
  lane :metadata do
    api_key = app_store_connect_api_key(
      key_id: "R29522TS2G",
      issuer_id: "69a6de89-d9b3-47e3-e053-5b8c7c11a4d1",
      key_filepath: "fastlane/AuthKey_R29522TS2G.p8",
      in_house: false
    )
    
    deliver(
      api_key: api_key,
      app_identifier: "leejay100.Bitcoiner",
      skip_binary_upload: true,
      skip_metadata: false,
      skip_screenshots: false,
      force: true,
      overwrite_screenshots: true,
      metadata_path: "./fastlane/metadata",
      screenshots_path: "./fastlane/screenshots",
      run_precheck_before_submit: false,
      precheck_include_in_app_purchases: false
    )
  end
  
end
