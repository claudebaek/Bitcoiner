# Fastfile for Bitcoiner
# Automates building and uploading to TestFlight

default_platform(:ios)

platform :ios do
  
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Setup API key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true,
      in_house: false
    )
    
    # Increment build number using current timestamp
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )
    
    # Create Bundle ID if not exists using App Store Connect API
    begin
      require 'spaceship'
      Spaceship::ConnectAPI.token = Spaceship::ConnectAPI::Token.create(
        key_id: api_key[:key_id],
        issuer_id: api_key[:issuer_id],
        key: api_key[:key]
      )
      
      bundle_id = Spaceship::ConnectAPI::BundleId.find("leejay100.Bitcoiner")
      unless bundle_id
        UI.message("Creating new Bundle ID: leejay100.Bitcoiner")
        Spaceship::ConnectAPI::BundleId.create(
          name: "Bitcoiner",
          identifier: "leejay100.Bitcoiner",
          platform: Spaceship::ConnectAPI::BundleIdPlatform::IOS
        )
        UI.success("Bundle ID created successfully!")
      else
        UI.message("Bundle ID already exists")
      end
    rescue => e
      UI.important("Bundle ID creation note: #{e.message}")
    end
    
    # Get certificates
    get_certificates(
      api_key: api_key
    )
    
    # Get provisioning profile (will create if needed)
    get_provisioning_profile(
      api_key: api_key,
      app_identifier: "leejay100.Bitcoiner",
      readonly: false
    )
    
    # Build the app
    gym(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      output_directory: "./build",
      output_name: "Bitcoiner.ipa",
      export_method: "app-store",
      clean: true
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key: api_key
    )
  end
  
  desc "Build only (no upload)"
  lane :build do
    build_app(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      output_directory: "./build",
      output_name: "Bitcoiner.ipa",
      export_method: "development"
    )
  end
  
  desc "Run tests"
  lane :test do
    run_tests(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      devices: ["iPhone 16 Pro"]
    )
  end
  
end
