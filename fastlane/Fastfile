# Fastfile for Bitcoiner
# Automates building and uploading to TestFlight

default_platform(:ios)

platform :ios do
  
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Setup API key
    api_key = app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: ENV["APP_STORE_CONNECT_API_KEY_CONTENT"],
      is_key_content_base64: true,
      in_house: false
    )
    
    # Increment build number using current timestamp
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )
    
    # Use provisioning profile name from environment (already installed)
    profile_name = ENV["PROVISIONING_PROFILE_NAME"]
    
    UI.message("Using profile: #{profile_name}")
    
    # Build the app with manual code signing
    archive_path = File.expand_path("../build/Bitcoiner.xcarchive")
    
    gym(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      output_directory: "./build",
      output_name: "Bitcoiner.ipa",
      export_method: "app-store",
      clean: true,
      skip_profile_detection: true,
      skip_package_dependencies_resolution: true,
      archive_path: archive_path,
      sdk: "iphoneos18.2",
      codesigning_identity: "Apple Distribution",
      xcargs: "CODE_SIGN_STYLE=Manual PROVISIONING_PROFILE_SPECIFIER='#{profile_name}' DEVELOPMENT_TEAM=96FPVL6LQJ",
      export_options: {
        signingStyle: "manual",
        teamID: "96FPVL6LQJ",
        provisioningProfiles: {
          "leejay100.Bitcoiner" => profile_name
        }
      }
    )
    
    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      api_key: api_key
    )
  end
  
  desc "Build only (no upload)"
  lane :build do
    build_app(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      output_directory: "./build",
      output_name: "Bitcoiner.ipa",
      export_method: "development"
    )
  end
  
  desc "Run tests"
  lane :test do
    run_tests(
      scheme: "Bitcoiner",
      project: "Bitcoiner.xcodeproj",
      devices: ["iPhone 16 Pro"]
    )
  end
  
end
